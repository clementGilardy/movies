{% extends "::layout.html.twig" %}

{%block stylesheets %}
    {{parent()}}
<link rel="stylesheet" href="{{asset('bundles/moviesusers/form.css')}}">
{%endblock%}

{%block title%}{{parent()}} - Users{%endblock%}

{%block arianne%}
{{parent()}} <img height="15px" src="{{asset('images/arrow.png')}}"/> Connexion
{%endblock%}

{%block section%}
	<h2>Connexion</h2>
<div class="well">
  {{ form_start(form) }}

    {# Les erreurs générales du formulaire. #}
    {{ form_errors(form) }}

    <div class="form-group">
      {# Génération du label. #}
      {{ form_label(form.pseudo, "Pseudo") }}

      {# Affichage des erreurs pour ce champ précis. #}
      {{ form_errors(form.pseudo) }}
        {# Génération de l'input. #}
      {{ form_widget(form.pseudo) }}
      
    </div>

    {# Idem pour un autre champ. #}
    <div class="form-group">
      {{ form_label(form.password, "Password") }}
      {{ form_errors(form.password) }}
        {{ form_widget(form.password) }}
    </div>
    
    {{ form_end(form) }}
</div>
	
{%endblock%}
